@{
    Layout = "~/Views/Shared/_LayoutBook.cshtml";
}

<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title" style="">Quản Lý Truyện</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb" style="background-color:rgb(252, 252, 252);">
                <li class="breadcrumb-item ml-auto"><a href="#" style="">Quản lý</a></li>
                <li class="breadcrumb-item active">Ta Thật Không Phải Là Tiên Nhị Đại</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <div>
                    <nav>
                        <ul class="nav nav-pills nav-fill">
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-dark m-1" href="~/Book/EditBook">Chỉnh Sửa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-dark m-1" href="~/Book/ChapterList">Danh Sách Chương</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-dark m-1" href="~/Book/CreateChapter">Thêm Chương</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-dark m-1" href="~/Book/statistic">Thống Kê</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-sm-12  bg-content">
            <div class="white-box">
                <form class="form-horizontal" id="form-edit" method="POST" action="#">
                    <div class="form-group">
                        <label class="col-md-12">Tên truyện</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" value="Ta Thật Không Phải Là Tiên Nhị Đại" name="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Phân loại</label>
                        <div class="col-md-12">
                            <select class="form-control" name="sex" disabled="">
                                <option value="1">Truyện Dịch</option>
                                <option value="2">Truyện Sáng tác</option>
                            </select>
                            <select class="form-control" name="sex" disabled="">
                                <option value="1">Truyện Nam</option>
                                <option value="2">Truyện Nữ</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Tên tiếng trung</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" value="我真不是仙二代" name="chinese_name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Link trung</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" value="https://book.qidian.com/info/1017596129" name="chinese_link">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Tên tác giả</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" value="Minh Nguyệt Địa Thượng Sương" name="chinese_link">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Tình trạng</label>
                        <div class="col-md-12">
                            <select class="form-control" name="status">
                                <option value="1">Đang ra</option>
                                <option value="2">Hoàn thành</option>
                                <option value="3">Dừng viết</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <p class="pull-right">
                <button type="button" class="btn btn-danger btn-rounded float-right">Lưu lại</button>
            </p>
        </div>
    </div>
</div>