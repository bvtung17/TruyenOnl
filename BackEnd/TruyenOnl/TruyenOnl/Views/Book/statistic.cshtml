                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Số tiền</th>
                                        <th>Người nhận</th>
                                        <th>Thời gian</th>
                                        <th>Tình trạng</th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
                <form>
                    <button type="button" class="btn btn-block btn-danger">Yêu Cầu Rút</button>
                </form>
            </div>

        </div>

    </div>

